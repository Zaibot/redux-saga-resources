{
	"compilerOptions": {
        "target": "es6",
        "module": "es6",
        "moduleResolution": "node",
        "isolatedModules": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "noImplicitAny": true,
        "noImplicitUseStrict": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "sourceMap": true,
        "outDir": "es6",
        "lib": [
          "es2015",
          "es2016",
          "es2017"
				]
	},
  "compileOnSave": false,
  "buildOnSave": false,
  "include": [
    "src/**/*"
  ],
	"exclude": [
		"node_modules"
	]
}
